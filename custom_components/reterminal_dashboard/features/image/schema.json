{
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "title": "Image Path",
            "description": "Path to image file (e.g. images/logo.png)"
        },
        "image_type": {
            "type": "string",
            "title": "Image Type",
            "default": "BINARY",
            "enum": [
                "BINARY",
                "GRAYSCALE",
                "RGB24",
                "RGBA"
            ]
        },
        "dither": {
            "type": "string",
            "title": "Dithering",
            "default": "FLOYDSTEINBERG",
            "enum": [
                "NONE",
                "FLOYDSTEINBERG",
                "BAYER2",
                "BAYER4"
            ]
        },
        "transparency": {
            "type": "string",
            "title": "Transparency Color",
            "description": "Color to treat as transparent (e.g. black, white)"
        },
        "invert": {
            "type": "boolean",
            "title": "Invert Colors",
            "default": false
        }
    }
}